[Unit]
Description=Edupi server

[Service]
User=ideascube
Group=ideascube
WorkingDirectory=/home/ideascube/.edupi/edupi/
ExecStart=/home/ideascube/.edupi/env/bin/gunicorn \
  --bind localhost:8010 edupi.wsgi:application \
  --log-level info
Restart=always
TimeoutStopSec=60
KillSignal=SIGINT
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
